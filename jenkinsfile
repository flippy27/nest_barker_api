pipeline{
 environment {
    PATH = "$PATH:/usr/local/bin"
  }
  agent any
  stages{
    stage("veryfing stuff"){
      steps{
        sh '''
          docker version
          docker info
        '''
      }
    }
    stage("build and compose"){
      steps{
        sh 'step([$class: 'DockerComposeBuilder', dockerComposeFile: 'docker-compose.yml', option: [$class: 'StartAllServices'], useCustomDockerComposeFile: true])'
      }
    }
  }
}
